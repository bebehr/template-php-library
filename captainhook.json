{
  "config": {
    "fail-on-first-error": false
  },
  "commit-msg": {
    "enabled": true,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
        "options": {
          "subjectLength": 50,
          "bodyLineLength": 72
        }
      }
    ]
  },
  "pre-push": {
    "enabled": true,
    "actions": [
      {
        "action": "git diff --check"
      },
      {
        "action": "composer validate"
      },
      {
        "action": "composer normalize:check"
      },
      {
        "action": "composer phpunit"
      }
    ]
  },
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "vendor-bin/phplint/vendor/bin/phplint {$STAGED_FILES|of-type:php|separated-by: }",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer check -v --config=.php-cs-fixer.php --diff {$STAGED_FILES|of-type:php|separated-by: }",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/phpcs/vendor/bin/phpcs {$STAGED_FILES|of-type:php|separated-by: }",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/phpmd/vendor/bin/phpmd {$STAGED_FILES|of-type:php|separated-by:,} ansi vendor-bin/phpmd/phpmd.xml --cache --cache-file var/cache/.phpmd.result-cache.php --cache-strategy content",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/phpstan/vendor/bin/phpstan analyse {$STAGED_FILES|of-type:php|separated-by: }",
        "config": {
          "allow-failure": true
        },
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/psalm/vendor/bin/psalm {$STAGED_FILES|of-type:php|separated-by: }",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      },
      {
        "action": "vendor-bin/phpinsights/vendor/bin/phpinsights analyse --config-path=vendor-bin/phpinsights/phpinsights.php --no-interaction {$STAGED_FILES|of-type:php|separated-by: }",
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
            "args": ["php"]
          }
        ]
      }
    ]
  }
}
