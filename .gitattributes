# Auto detect text files and enforce LF normalization
* text=auto eol=lf

# Source code (PHP files)
*.php diff=php

# Documentation
*.md diff=markdown

# Configs
*.lock -diff

# Archives
*.phar binary

# Fix syntax highlighting on GitHub to allow comments
.vscode/*.json linguist-language=JSON-with-Comments

# Generated files
vendor-bin/**/composer.lock linguist-generated=true
composer.lock               linguist-generated=true

# Exclude files from exporting
.vscode/*                   export-ignore
tests/*                     export-ignore
var/*                       export-ignore
vendor-bin/**/composer.lock export-ignore
.editorconfig               export-ignore
.gitattributes              export-ignore
.github                     export-ignore
.gitignore                  export-ignore
.php-cs-fixer.php           export-ignore
.phplint.yml                export-ignore
captainhook.json            export-ignore
composer.lock               export-ignore
phpcs.xml                   export-ignore
phpinsights.php             export-ignore
phpmd.xml                   export-ignore
phpstan.neon                export-ignore
phpunit.xml                 export-ignore
psalm.xml                   export-ignore
README.md                   export-ignore
