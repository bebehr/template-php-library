{
  "name": "bebehr/template-php-library",
  "description": "Starter template for generating new PHP library repositories",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "library",
    "template"
  ],
  "authors": [
    {
      "name": "bebehr",
      "homepage": "https://github.com/bebehr"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "phpunit/phpunit": "^10.5"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Bebehr\\TemplatePhpLibrary\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bebehr\\TemplatePhpLibrary\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "platform": {
      "php": "8.1"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true
    }
  },
  "scripts": {
    "analyse": [
      "@phpstan",
      "@psalm"
    ],
    "analyze": [
      "@analyse"
    ],
    "fix": [
      "@php-cs-fixer:fix"
    ],
    "lint": [
      "@phplint",
      "@php-cs-fixer:check"
    ],
    "normalize": "composer bin composer-normalize normalize ../../composer.json",
    "php-cs-fixer:check": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer check --diff -v",
    "php-cs-fixer:fix": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer fix --diff -v",
    "phplint": "vendor-bin/phplint/vendor/bin/phplint",
    "phpstan": "vendor-bin/phpstan/vendor/bin/phpstan analyse",
    "phpunit": "vendor/bin/phpunit",
    "psalm": [
      "vendor-bin/psalm/vendor/bin/psalm --no-cache",
      "vendor-bin/psalm/vendor/bin/psalm --taint-analysis --no-cache"
    ],
    "test": "@phpunit"
  }
}
