{
  "name": "bebehr/template-php-library",
  "description": "Starter template for generating new PHP library repositories",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "library",
    "template"
  ],
  "authors": [
    {
      "name": "bebehr",
      "homepage": "https://github.com/bebehr"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "phpunit/phpunit": "^10.5"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Bebehr\\TemplatePhpLibrary\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bebehr\\TemplatePhpLibrary\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "platform": {
      "php": "8.1"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true
    }
  },
  "scripts": {
    "analyse": [
      "@phpcpd",
      "@phpmd",
      "@phpstan",
      "@psalm"
    ],
    "fix": [
      "@php-cs-fixer:fix",
      "@phpcbf"
    ],
    "lint": [
      "@phplint",
      "@php-cs-fixer:check",
      "@phpcs"
    ],
    "metrics" : [
      "@phploc",
      "@pdepend",
      "@phpmetrics"
    ],
    "normalize": "composer bin composer-normalize normalize ../../composer.json",
    "php-cs-fixer:check": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer check -v --diff",
    "php-cs-fixer:fix": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --diff",
    "phpcbf": "vendor-bin/phpcs/vendor/bin/phpcbf",
    "phpcpd": "vendor-bin/phpcpd/vendor/bin/phpcpd --fuzzy src tests ",
    "phpcs": "vendor-bin/phpcs/vendor/bin/phpcs",
    "pdepend": "vendor-bin/pdepend/vendor/bin/pdepend --summary-xml=var/reports/pdepend.summary.xml --jdepend-chart=var/reports/pdepend.chart.svg --overview-pyramid=var/reports/pdepend.overview.svg src",
    "phplint": "vendor-bin/phplint/vendor/bin/phplint",
    "phploc": "vendor-bin/phploc/vendor/bin/phploc src --log-json var/reports/phploc.json",
    "phpmd": [
      "@phpmd:html",
      "@phpmd:ansi"
    ],
    "phpmetrics": [
      "@phpunit",
      "vendor-bin/phpmetrics/vendor/bin/phpmetrics --config=phpmetrics.json"
    ],
    "phpmd:ansi": "vendor-bin/phpmd/vendor/bin/phpmd . ansi phpmd.xml --exclude .vscode/*,var/*,vendor/*,vendor-bin/* --cache --cache-file var/cache/.phpmd.result-cache.php --cache-strategy content",
    "phpmd:html": "vendor-bin/phpmd/vendor/bin/phpmd . html phpmd.xml --exclude .vscode/*,var/*,vendor/*,vendor-bin/* --report-file var/reports/phpmd.html --cache --cache-file var/cache/.phpmd.result-cache.php --cache-strategy content --ignore-errors-on-exit --ignore-violations-on-exit",
    "phpstan": "vendor-bin/phpstan/vendor/bin/phpstan analyse",
    "phpunit": "vendor/bin/phpunit",
    "psalm": [
      "vendor-bin/psalm/vendor/bin/psalm",
      "vendor-bin/psalm/vendor/bin/psalm --taint-analysis"
    ],
    "test": "@phpunit"
  }
}
